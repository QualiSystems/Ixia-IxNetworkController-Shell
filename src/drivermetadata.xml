<Driver Description="Shell to setup and run Ixia traffic generator" MainClass="driver.IxNetworkControllerDriver" Name="IxiaControllerDriver" Version="1.1.0">
    <Layout>
         <Category Name="Hidden Commands">
            <Command Name="keep_alive" DisplayName="Keep Alive" Tags="" Description="" EnableCancellation="true"/>
        </Category>

		<Command Name="load_config" DisplayName="Load Configuration"
				 Description="Load configuration and reserve ports">
	    	<Parameters>
            	<Parameter Name="ixia_config_file_name" DisplayName="Ixia config file name" Type="String" Mandatory="True"
                           Description="Full path to Ixia configuration file name" />
            </Parameters>
        </Command>
		<Command Name="send_arp" DisplayName="Start ARP/ND"
				 Description="Send ARP/ND for all protocols" >
        </Command>
		<Command Name="start_protocols" DisplayName="Start Protocols"
				 Description="Start all protocls" >
        </Command>
		<Command Name="stop_protocols" DisplayName="Stop Protocols"
				 Description="Stop all protocols" >
        </Command>
        <Command Name="start_traffic" DisplayName="Start Traffic"
        		 Description="Start L2-3 Traffic">
            <Parameters>
            	<Parameter Name="blocking" DisplayName="Blocking" Type="Lookup" Mandatory="True" AllowedValues="True, False" DefaultValue="False"
                           Description="True - return after traffic finish to run, False - return immediately" />
            </Parameters>
        </Command>
        <Command Name="stop_traffic" DisplayName="Stop Traffic"
        		 Description="Stop L2-3 Traffic">
        </Command>
        <Command Name="get_statistics" DisplayName="Get Statistics"
        		 Description="Get view statistics" >
        	<Parameters>
            	<Parameter Name="view_name" DisplayName="View Name" Type="String" Mandatory="True" DefaultValue=""
                           Description="Port Statistics, Traffic Item Statistics, Flow Statistics, etc." />
                <Parameter Name="output_type" DisplayName="Output Type" Type="Lookup" Mandatory="True" AllowedValues="CSV, JSON" DefaultValue="CSV"
                		   Description="CSV or JSON" />
            </Parameters>
        </Command>
        <Command Name="run_quick_test" DisplayName="Run Quick Test" Description="">
            <Parameters>
            	<Parameter Name="test" DisplayName="Quick Test Name" Type="String" Mandatory="True" DefaultValue=""
                           Description="Name of quick test to run" />
            </Parameters>
        </Command>

    </Layout>
</Driver>
