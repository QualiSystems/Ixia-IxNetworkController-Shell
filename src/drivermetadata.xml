<Driver Description="Shell to setup and run Ixia traffic generator" MainClass="driver.IxiaControllerDriver" Name="IxiaControllerDriver" Version="1.0.0">
    <Layout>
         <Category Name="Hidden Commands">
            <Command Name="keep_alive" DisplayName="Keep Alive" Tags="" Description="" EnableCancellation="true"/>
        </Category>

		<Command Name="load_config" DisplayName="Load configuration" Description="Reserve ports and load configuration" >
	    	<Parameters>
            	<Parameter Name="ixia_config_file_name" Type="String" Mandatory="True"
                           DisplayName="Ixia config file name" Description="Full path to Ixia configuration file name" />
            </Parameters>
        </Command>
		<Command Name="send_arp" DisplayName="Start ARP/ND" Description="Send ARP/ND for all devices and streams" >
        </Command>
		<Command Name="start_devices" DisplayName="Start All Devices" Description="Start all emulations on all devices" >
        </Command>
		<Command Name="stop_devices" DisplayName="Stop All Devices" Description="Stop all emulations on all devices" >
        </Command>
        <Command Name="start_traffic" DisplayName="Start Traffic" Description="">
            <Parameters>
            	<Parameter Name="blocking" Type="String" Mandatory="False" DefaultValue="False"
                           DisplayName="Block the command until all the traffic finish to run" Description="" />
            </Parameters>
        </Command>
        <Command Name="stop_traffic" DisplayName="Stop Traffic" Description=""></Command>
        <Command Name="get_statistics" DisplayName="Get Statistics" Description="Get all the ports statistics" >
         <Parameters>
            	<Parameter Name="view_name" Type="String" Mandatory="True"
                           DisplayName="View Name" Description="" />
                <Parameter Name="output_type" Type="String" Mandatory="True"
                           DisplayName="Output Type" DefaultValue="" Description="CSV or JSON" />
            </Parameters>
        </Command>
        <Command Name="run_quick_test" DisplayName="Run Quick Test" Description="">
            <Parameters>
            	<Parameter Name="test" Type="String" Mandatory="True" DefaultValue=""
                           DisplayName="Quick Test Name" Description="Name of quick test to run" />
            </Parameters>
        </Command>

    </Layout>
</Driver>
